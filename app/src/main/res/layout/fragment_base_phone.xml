<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/t10dp"
        android:background="@mipmap/phone_bg"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingLeft="@dimen/t5dp"
        android:paddingRight="@dimen/t5dp">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/t20dp"
            android:text="@string/phone_tint"
            android:textColor="@color/purple_b4770a"
            android:textSize="@dimen/t12sp" />

        <EditText
            android:id="@+id/et_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/t40dp"
            android:layout_marginRight="@dimen/t40dp"
            android:layout_marginTop="@dimen/t20dp"
            android:background="@mipmap/phone_edit_bg"
            android:inputType="phone"
            android:maxLength="11"
            android:paddingLeft="@dimen/t15dp"
            android:paddingRight="@dimen/t15dp"
            android:textColor="@color/purple_b4770a"
            android:textColorHint="@color/purple_b4770a"
            android:textSize="@dimen/t13sp" />


    </LinearLayout>

    <ImageView
        android:id="@+id/iv_submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/t15dp"
        android:src="@mipmap/phone_confirm" />
</RelativeLayout>