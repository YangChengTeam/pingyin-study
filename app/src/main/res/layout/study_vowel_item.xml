<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_cover_layer"
            android:layout_width="140dp"
            android:layout_height="@dimen/t80dp"
            android:layout_centerInParent="true"
            android:background="#66DEDEDE"
            android:visibility="gone" />

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">

            <ImageView
                android:id="@+id/iv_vowel"
                android:layout_width="140dp"
                android:layout_height="@dimen/t80dp"
                android:layout_gravity="center" />

            <ImageView
                android:id="@+id/iv_lock"
                android:layout_width="@dimen/t30dp"
                android:layout_height="@dimen/t30dp"
                android:layout_gravity="center"
                android:src="@mipmap/study_vowel_locked" />
        </FrameLayout>


    </RelativeLayout>
</LinearLayout>